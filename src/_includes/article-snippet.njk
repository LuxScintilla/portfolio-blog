<li class="list__item">
  <article class="snippet">
    <div class="snippet__img-container">
      <img class="snippet__img" src="{{post.data.image}}" alt="{{post.data.imageAlt}}">
    </div>
    <div class="snippet__body">
      <h3 class="snippet__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      <p class="snippet__date">{{ post.data.date | postDate }}</p>
      <p class="snippet__description">{{ post.data.description }}</p>
      <a class="btn" aria-label="continue reading about {{ post.data.title }}" href="{{ post.url }}">Continue
        Reading</a>
    </div>
  </article>
</li>