<li class="featured__item">
  <article class="article">
    <div class="article__img-container">
      <img class="article__img" src="{{post.data.image}}" alt="{{post.data.imageAlt}}">
    </div>
    <div class="article__body">
      <h3 class="article__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      <p class="article__date">{{ post.data.date | postDate }}</p>
      <p class="article__snippet">{{ post.data.description }}</p>
      <a class="btn" aria-label="continue reading about {{ post.data.title }}" href="{{ post.url }}">Continue
        Reading</a>
    </div>
  </article>
</li>